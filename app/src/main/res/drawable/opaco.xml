<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo exterior -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/gris" /> <!-- Cambia el color según tus necesidades -->
            <stroke android:color="@color/black"
                android:width="0.5dp"></stroke>
        </shape>
    </item>

    <!-- Círculo interior -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/gris" /> <!-- Cambia el color según tus necesidades -->
            <size
                android:width="15dp"
                android:height="15dp" />
            <stroke android:color="@color/black"
                android:width="0.5dp"></stroke>
        </shape>
    </item>
</layer-list>
